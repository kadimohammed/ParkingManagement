@page "/signup"
@layout EmptyLayout

<PageTitle>ParKing - Inscription</PageTitle>

<div class="login-page">
    <div class="login-background"></div>
    
    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center mb-4 logo-container">
                    <img src="/images/parking_Logo.png" alt="ParKing" class="logo" />
                    <h1 class="app-name">ParKing</h1>
                    <p class="app-slogan">La gestion de parking simplifiée</p>
                </div>
                
                <div class="card login-card">
                    <div class="card-body p-4">
                        <h2 class="card-title text-center mb-4">Créer un compte</h2>
                        
                        <EditForm Model="signModel" OnValidSubmit="HandleSignUp">
                            <DataAnnotationsValidator />
                            
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger mb-4" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    @errorMessage
                                </div>
                            }
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="lastName">Nom</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <InputText @bind-Value="signModel.LastName" class="form-control" id="lastName" placeholder="Votre nom" />
                                        </div>
                                        <ValidationMessage For="@(() => signModel.LastName)" class="validation-message" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="firstName">Prénom</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <InputText @bind-Value="signModel.FirstName" class="form-control" id="firstName" placeholder="Votre prénom" />
                                        </div>
                                        <ValidationMessage For="@(() => signModel.FirstName)" class="validation-message" />
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group mb-4">
                                <label for="email">Adresse email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <InputText @bind-Value="signModel.Email" class="form-control" id="email" placeholder="nom@exemple.com" />
                                </div>
                                <ValidationMessage For="@(() => signModel.Email)" class="validation-message" />
                            </div>
                            
                            <div class="form-group mb-4">
                                <label for="phone">Téléphone</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <InputText @bind-Value="signModel.Phone" class="form-control" id="phone" placeholder="Votre numéro de téléphone" />
                                </div>
                                <ValidationMessage For="@(() => signModel.Phone)" class="validation-message" />
                            </div>
                            
                            <div class="form-group mb-4">
                                <label for="password">Mot de passe</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <InputText @bind-Value="signModel.Password" class="form-control" id="password" placeholder="Choisissez un mot de passe" type="password" />
                                </div>
                                <ValidationMessage For="@(() => signModel.Password)" class="validation-message" />
                            </div>
                            
                            <div class="form-group mb-4">
                                <label for="confirmPassword">Confirmer le mot de passe</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <InputText @bind-Value="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirmez votre mot de passe" type="password" />
                                </div>
                                @if (signModel.Password != confirmPassword)
                                {
                                    <div class="validation-message">Les mots de passe ne correspondent pas</div>
                                }
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-lg w-100 login-btn" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span>Inscription en cours...</span>
                                    <i class="fas fa-spinner fa-spin ms-2"></i>
                                }
                                else
                                {
                                    <span>S'inscrire</span>
                                    <i class="fas fa-user-plus ms-2"></i>
                                }
                            </button>
                            
                            <div class="text-center mt-4">
                                <p class="mb-0">Déjà un compte ? <a href="/login" class="signup-link">Se connecter</a></p>
                            </div>
                        </EditForm>
                    </div>
                </div>
                
                <div class="copyright">
                    <p>&copy; @DateTime.Now.Year ParKing. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </div>
</div>
